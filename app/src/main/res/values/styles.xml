<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--关卡成功结束关卡状态标题字体样式-->
    <style name="ShowSuccessMessage">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#fda245</item>
    </style>

    <!--关卡失败结束关卡状态标题字体样式-->
    <style name="ShowFailureMessage">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#fda245</item>
    </style>

    <!--关卡成功结束关卡信息字体样式-->
    <style name="LevelMessage">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#0185b6</item>
    </style>

    <!--关卡成功结束状态信息的标题字体样式-->
    <style name="StateTitleMessage">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#0185b6</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <!--关卡成功结束状态信息的内容字体样式-->
    <style name="StateContentMessage">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#00ff00</item>
    </style>

    <!--页面-->
    <style name="ShowPagerMessage">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#527D98</item>
    </style>


    <!--关卡页面控制器按钮的样式-->
    <style name="pager_bg">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!--游戏界面三个道具的样式-->
    <style name="link_prop">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/link_prop</item>
    </style>

    <!--游戏界面关卡字体样式-->
    <style name="link_level">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">21sp</item>
    </style>

    <!--游戏界面具体关卡信息字体样式-->
    <style name="link_level_message">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--控制道具大小的样式-->
    <style name="link_props">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="imgResource">@drawable/img_shape</item>
    </style>

    <!--控制道具的数量的样式-->
    <style name="link_prop_num">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">-4dp</item>
        <item name="android:layout_marginBottom">-4dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:background">@drawable/link_prop_num</item>
    </style>

    <!--金币的字体样式-->
    <style name="link_money_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FEFDA8</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--时间的字体样式-->
    <style name="link_time_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@drawable/link_time</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--包裹道具的布局样式-->
    <style name="link_prop_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">45dp</item>
    </style>

    <!--包裹道具的布局内部样式-->
    <style name="link_prop_in">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!--暂停的字体样式-->
    <style name="ShowPauseText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#75ABF7</item>
    </style>

    <!--解释说明，转折，道具说明的字体样式-->
    <style name="ShowExplainText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!--设置标题的文本样式-->
    <style name="SettingText">
        <item name="android:textColor">#F0B773</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>


</resources>
