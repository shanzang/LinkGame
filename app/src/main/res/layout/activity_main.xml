<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"

    android:background="@drawable/main_bg"
    android:id="@+id/root_main">

    <!--包裹布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!--标题部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            >

        </LinearLayout>

        <!--模式部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <!--简单-->
            <swu.xl.linkgame.SelfView.XLButton
                android:id="@+id/main_mode_easy"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_shape_main_bg"
                android:layout_marginTop="40dp"
                android:textSize="24sp"
                android:text="简单模式"
                />

            <!--普通-->
            <swu.xl.linkgame.SelfView.XLButton
                android:id="@+id/main_mode_normal"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_shape_main_bg"
                android:layout_marginTop="40dp"
                android:textSize="24sp"
                android:text="普通模式"
                />

            <!--困难-->
            <swu.xl.linkgame.SelfView.XLButton
                android:id="@+id/main_mode_hard"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_shape_main_bg"
                android:layout_marginTop="40dp"
                android:textSize="24sp"
                android:text="困难模式"
                />

        </LinearLayout>

        <!--相关设置-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            >

            <!--设置-->
            <Button
                android:id="@+id/main_setting"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/main_setting"
                android:layout_marginEnd="30dp"
                />

            <!--帮助-->
            <Button
                android:id="@+id/main_help"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/main_help"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>